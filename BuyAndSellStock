package Revision;

public class BuyAndSellStock {

	public static void main(String[] args) {
		
		int[] prices= {5,7,12,25};
		
		int max_Profit=buyAndSellStock(prices,prices.length);
		
		System.out.print("Maximum Profit: " + max_Profit);
		

	}

	private static int buyAndSellStock(int[] prices, int l) {
		
		int min_price=Integer.MAX_VALUE;
		
		int max_profit=0;
		
		for(int n:prices) {
			
			min_price=Math.min(min_price, n);
			
			max_profit=Math.max(max_profit, n-min_price);
			
			
		}
		
		
		return max_profit;
	}

}
